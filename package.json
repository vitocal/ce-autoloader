{
  "name": "ce-autoloader",
  "version": "0.0.3",
  "description": "A webcomponents auto loader and registry",
  "type": "module",
  "main": "./dist/ce-autoloader.umd.cjs",
  "module": "./dist/ce-autoloader.js",
  "types": "./dist/ce-autoloader.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ce-autoloader.js",
      "require": "./dist/ce-autoloader.umd.cjs"
    }
  },
  "customElements": "custom-elements.json",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --mode development --watch",
    "build:vi-components": "vite build --config vite.vi-components.config.js",
    "watch:vi-components": "vite build --config vite.vi-components.config.js --watch",
    "serve": "npm run build:vi-components && vite",
    "build": "npm run build:vi-components && vite build",
    "test": "npm run test:headless",
    "test:headless": "node scripts/run-integration-tests.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitocal/ce-autoloader.git"
  },
  "keywords": [
    "webcomponents",
    "lazyloader",
    "autoloader",
    "registry",
    "custom-element-registry",
    "wc-autoloader",
    "ce-autoloader"
  ],
  "author": "Vitor Calejuri <vitor.cajuleri@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@types/node": "^24.10.1",
    "buffer": "^6.0.3",
    "chai": "^6.2.1",
    "lit": "^3.3.1",
    "mocha": "^11.7.5",
    "puppeteer": "^24.31.0",
    "qrcode-pix": "^5.0.0",
    "vite": "^7.2.2"
  }
}
